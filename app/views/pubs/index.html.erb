<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">Pubs</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <ul>
        <% @pubs.each do |pub| %>
          <li>
            <h4><%= link_to pub.name, pub %></h4>
            <%= pub.happy_hour_price %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new pub", new_pub_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
